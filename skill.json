{
  "name": "bili-transcribe",
  "version": "1.1.0",
  "description": "B站视频转录工具 - 一键下载视频并生成逐字稿和总结",
  "author": "taylorzhou16",
  "entry": {
    "type": "python",
    "file": "skill.py"
  },
  "commands": [
    {
      "name": "bili-transcribe",
      "description": "转录B站视频为文字（完整逐字稿）",
      "args": [
        {
          "name": "url",
          "description": "B站视频URL或BV号",
          "required": true
        },
        {
          "name": "model",
          "description": "Whisper模型 (tiny/base/small/medium/large)",
          "required": false,
          "default": "small"
        }
      ]
    },
    {
      "name": "bili-summarize",
      "description": "转录B站视频并输出内容总结",
      "args": [
        {
          "name": "url",
          "description": "B站视频URL或BV号",
          "required": true
        },
        {
          "name": "model",
          "description": "Whisper模型 (tiny/base/small/medium/large)",
          "required": false,
          "default": "small"
        }
      ]
    }
  ]
}
